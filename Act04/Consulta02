<html>
<head>
    <title>Libros de la Biblioteca con más de 150 páginas</title>
</head>
<body>
    <table border="1">
        <tr>
            <th>Código del Libro</th>
            <th>Título</th>
            <th>Editorial</th>
            <th>Edición</th>
            <th>ISBN</th>
            <th>Número de Páginas</th>
        </tr>
        {
         for $libro in doc("BD_Libros.xml")/Libros/libro
            where xs:integer($libro/NumPaginas) > 500
            return
                <tr>
                    <td>{data($libro/Cod_Libro)}</td>
                    <td>{data($libro/Titulo)}</td>
                    <td>{data($libro/Editorial)}</td>
                    <td>{data($libro/Edicion)}</td>
                    <td>{data($libro/ISBN)}</td>
                    <td>{data($libro/NumPaginas)}</td>
                </tr>
        }
    </table>
</body>
</html>


